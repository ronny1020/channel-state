{
  "name": "@channel-state/workspace",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:core": "pnpm --filter='@channel-state/core' run build",
    "build:packages": "pnpm -r --filter='./packages/*' run build",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "dev": "pnpm -r --parallel run dev",
    "dev:core": "pnpm --filter='@channel-state/core' run dev",
    "dev:core-example": "pnpm --filter='core-app' run dev",
    "dev:examples": "pnpm -r --filter='./examples/*' --parallel run dev",
    "dev:react-example": "pnpm --filter='react-app' run dev",
    "dev:svelte-example": "pnpm --filter='svelte-app' run dev",
    "dev:vue-example": "pnpm --filter='vue-app' run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm -r --no-bail run lint",
    "lint:check": "pnpm -r run lint:check",
    "prepare": "husky",
    "sort-package-json": "npx sort-package-json && pnpm -r exec npx sort-package-json",
    "test": "pnpm -r --no-bail --filter='./packages/*' run test",
    "test:coverage": "pnpm -r --filter='./packages/*' run test:coverage",
    "typecheck": "pnpm -r --no-bail run typecheck",
    "version:major": "pnpm -r --filter='./packages/*' exec pnpm version major",
    "version:minor": "pnpm -r --filter='./packages/*' exec pnpm version minor",
    "version:patch": "pnpm -r --filter='./packages/*' exec pnpm version patch"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "rimraf": "^6.0.1",
    "svelte-eslint-parser": "^1.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.5",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0"
  }
}
