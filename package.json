{
  "name": "@channel-state/workspace",
  "private": true,
  "keywords": [
    "channel",
    "channel-state",
    "state",
    "state-management",
    "vanilla",
    "react",
    "vue",
    "svelte",
    "typescript",
    "event-driven",
    "cross-tab",
    "cross-window",
    "broadcast-channel",
    "indexeddb",
    "zero-dependency",
    "persistence"
  ],
  "homepage": "https://github.com/ronny1020/channel-state",
  "bugs": {
    "url": "https://github.com/ronny1020/channel-state/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ronny1020/channel-state.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Ronny",
    "email": "ronny1020@gmail.com",
    "url": "https://github.com/ronny1020"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:core": "pnpm --filter='@channel-state/core' run build",
    "build:packages": "pnpm -r --filter='./packages/*' run build",
    "check:all": "pnpm i && pnpm run build && pnpm run test && pnpm run typecheck && pnpm run format && pnpm run lint",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "dev": "pnpm -r --parallel run dev",
    "dev:core": "pnpm --filter='@channel-state/core' run dev",
    "dev:core-example": "pnpm --filter='core-app' run dev",
    "dev:examples": "pnpm -r --filter='./examples/*' --parallel run dev",
    "dev:react-example": "pnpm --filter='react-app' run dev",
    "dev:svelte-example": "pnpm --filter='svelte-app' run dev",
    "dev:vue-example": "pnpm --filter='vue-app' run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm -r --no-bail --parallel run lint && eslint scripts/**/*.ts",
    "lint:check": "pnpm -r --parallel run lint:check",
    "prepare": "husky",
    "release:all": "pnpm run check:all && pnpm -r --filter='./packages/*' exec pnpm publish",
    "sort-package-json": "npx sort-package-json && pnpm -r exec npx sort-package-json",
    "test": "pnpm -r --no-bail --parallel --filter='./packages/*' run test",
    "test:coverage": "pnpm -r --parallel --filter='./packages/*' run test:coverage",
    "typecheck": "pnpm -r --no-bail run typecheck && tsc --noEmit -p scripts",
    "update:peer-deps": "node --loader ts-node/esm scripts/update-peer-deps.ts",
    "version:major": "pnpm -r --filter='./packages/*' exec pnpm version major && pnpm update:peer-deps",
    "version:minor": "pnpm -r --filter='./packages/*' exec pnpm version minor && pnpm update:peer-deps",
    "version:patch": "pnpm -r --filter='./packages/*' exec pnpm version patch && pnpm update:peer-deps"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild-plugin-globals": "^0.2.0",
    "eslint": "^9.34.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "rimraf": "^6.0.1",
    "svelte-eslint-parser": "^1.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0"
  }
}
